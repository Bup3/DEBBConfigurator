{% extends "FOSUserBundle::layout.html.twig" %}
{% block title %}{{ 'security.login.submit' | trans }}{% endblock %}

{% trans_default_domain 'FOSUserBundle' %}

{% block form_header %}
	<form action="{{ path("fos_user_security_check") }}" method="post">
{% endblock %}

{% block fos_user_content %}
	{% if error %}
		<div class="alert alert-error">{{ error|trans }}</div>
	{% endif %}

	{% block form %}
		<input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

		<label for="username">{{ 'security.login.username'|trans }}</label>
		<input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />

		<label for="password">{{ 'security.login.password'|trans }}</label>
		<input type="password" id="password" name="_password" required="required" />

		<label for="remember_me" class="checkbox"><input type="checkbox" id="remember_me" name="_remember_me" value="on" />
			{{ 'security.login.remember_me'|trans }}</label>
	{% endblock %}
{% endblock %}

{% block buttonbar %}
	<button class="blue blue-button" type="submit" id="_submit" name="_submit">{{ 'security.login.submit'|trans }}</button>
{% endblock %}

{% block form_footer %}
	</form>
{% endblock %}
