<!DOCTYPE html>
<html>
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
		<title>{{ 'page.title' | trans }}</title>
		{% block meta %}
			<meta name="description" content="{{ 'page.description' | trans }}" />
			<meta name="keywords" content="{{ 'page.keywords' | trans }}" />
		{% endblock %}
		{% block stylesheets %}
			{% stylesheets filter='cssrewrite'
				'bundles/debbconfig/css/bootstrap.min.css'
				'bundles/debbconfig/css/bootstrap-responsive.min.css'
				'bundles/debbconfig/css/main.css'
			%}
				<link href="{{ asset_url }}" type="text/css" rel="stylesheet" />
			{% endstylesheets %}
		{% endblock %}
		{% block javascripts %}
			{% javascripts
				'@DebbConfigBundle/Resources/public/js/jquery.min.js'
				'@DebbConfigBundle/Resources/public/js/bootstrap.min.js'
			%}
				<script src="{{ asset_url }}" type="text/javascript"></script>
			{% endjavascripts %}
		{% endblock %}
	</head>
	<body>
		{% block body %}
			<div id="wrapper">
				<div id="main-menu">
					<div id="app-logo"></div>
				</div>

				<div class="clear"></div>

				<div id="config-menu">
					<ul>
						{% block menu %}
							<li>
								<a class="first one" href="node_overview.html">{{ 'configure.%what%' | trans({'%what%': 'node' | trans}) }}</a>
								<ul>
									<li>
										<a class="current" href="node_overview.html">{{ 'overview' | trans }}</a>
									</li>
									<li>
										<a href="node_add.html">{{ 'create.%what%' | trans({'%what%': 'node' | trans}) }}</a>
									</li>
								</ul>
							</li>
							<li>
								<a class="first two" href="node-group_overview.html">{{ 'define.%what%' | trans({'%what%': 'node.group' | trans}) }}</a>
							</li>
							<li>
								<a class="first three" href="#">{{ 'equip.%what%' | trans({'%what%': 'rack' | trans}) }}</a>
							</li>
						{% endblock %}
					</ul>
				</div>

				<div id="content">
					{% block content %}{% endblock %}
				</div>

				<div class="clear"></div>

			</div>
		{% endblock %}
	</body>
</html>