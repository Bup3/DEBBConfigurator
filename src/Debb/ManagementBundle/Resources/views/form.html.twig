{% set showTitle = true %}
{% extends "::base.html.twig" %}
{% block title %}{{ localdev_admin_name(true) }}{% endblock %}

{% block content %}
	<form action="{% if item.id is null %}{{ path( localdev_admin_route('_form')) }}{% else %}{{ path( localdev_admin_route('_form'), {id: item.id}) }}{% endif %}"
		  class="clearfix"
		  method="post" {{ form_enctype(form) }}>
		<h1>{{ ((item.id == null) ? 'localdev_admin.title.add' : 'localdev_admin.title.edit') | trans({"%name%":localdev_admin_name()}, 'crud') }}</h1>

		<div class="well">
			{% block form %}
				<div class="row{{ localdev_admin.layout.fluid }}">
					{{ form_widget(form) }}
				</div>
			{% endblock %}
		</div>
		{% block form_button %}
			<div class="clearfix">
				<div class="pull-left">
					<a href="{{ path(localdev_admin_route('_index')) }}" class="btn">{{ 'localdev_admin.actions.back'|trans({}, 'crud') }}</a>
				</div>
				<div class="pull-right">
					<button class="btn btn-success" type="submit">{{ 'localdev_admin.actions.save'|trans({}, 'crud') }}</button>
				</div>
			</div>
		{% endblock %}
	</form>
{% endblock %}
